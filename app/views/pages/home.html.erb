<!-- Biz prop -->
<div id="proposition">
  <h1>Rent a cat paw a day or two</h1>
  <h3>You'll be feline great!</h3>
</div>
<div class="container px-5 py-5">
  <!-- Cats cards -->
  <div class="row row-gap-4">
    <% @cats.each do |cat| %>
  <div class="col-12 col-sm-6 col-md-4 col-lg-3">
    <div class="card">
      <%= link_to cat_path(cat) do %>
        <% if cat.photo.attached? %>
          <div class="card-img-top">
            <%= cl_image_tag cat.photo.key, alt: cat.name %>
          </div>
        <% else %>
          <div class="card-img-top">
            <%= image_tag "cat-test.jpeg", alt: "Default Image" %>
          </div>
        <% end %>
      <% end %>
      <div class="card-body">
        <h5 class="card-title"><%= cat.name %></h5>
        <p class="card-text description"><%= cat.description %></p>
        <p class="card-text price"><%= number_to_currency(cat.price_per_day, unit: "$") %>/day</p>
      </div>
    </div>
  </div>
<% end %>

  </div>
</div>
